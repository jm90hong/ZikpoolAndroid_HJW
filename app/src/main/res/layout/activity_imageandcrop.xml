<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:id="@+id/container1"
    >

    <!-- Image Cropper fill the remaining available height -->
    <com.theartofdev.edmodo.cropper.CropImageView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/resultImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        >
    </com.theartofdev.edmodo.cropper.CropImageView>

    <!--<Button-->
        <!--android:id="@+id/cropBtn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="확인" />-->

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/cropBtn"
                android:layout_width="1dp"
                android:layout_height="46dp"
                android:layout_weight="50"
                android:background="#007DEE"
                android:textColor="#3e3a39"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/ngfont"
                android:text="확인"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/rotateBtn"
                android:layout_width="1dp"
                android:layout_height="46dp"
                android:layout_weight="35"
                android:background="#cccccc"
                android:gravity="center"
                android:src="@drawable/rotatebtnicon"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="1dp"
                android:layout_height="46dp"
                android:layout_weight="50"
                android:background="#3e3a39"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:clickable="true"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/ngfont"
                android:text="취소"
                />
        </LinearLayout>

    </RelativeLayout>


        <!--/>-->
</RelativeLayout>
