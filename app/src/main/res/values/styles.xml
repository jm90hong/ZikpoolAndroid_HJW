<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.StatusBar_main" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#fad037</item>
        <item name="colorPrimaryDark">#fad037</item>
        <item name="colorAccent">#fad037</item>
        <item name="android:statusBarColor">#fad037</item>
    </style>


    <style name="AppTheme.StatusBar_sub" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#cccccc</item>
        <item name="colorPrimaryDark">#cccccc</item>
        <item name="colorAccent">#cccccc</item>
        <item name="android:statusBarColor">#dedede</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">#3e3a39</item>
        <item name="android:textColorSecondary">#3e3a39</item>
        <item name="android:background">#ffffff</item>
        <item name="actionMenuTextColor">#3e3a39</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ngfont</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle_main_color" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">#3e3a39</item>
        <item name="android:textColorSecondary">#3e3a39</item>
        <item name="android:background">#fad037</item>
        <item name="actionMenuTextColor">#3e3a39</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ngfont</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>





    <style name="ToolBarStyle_white" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#3e3a39</item>
        <item name="android:textColorSecondary">#3e3a39</item>
        <item name="actionMenuTextColor">#3e3a39</item>
        <item name="android:background">#ffffff</item>
        <item name="colorControlNormal">#3e3a39</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ngfont</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ProgressBarCircleSplash" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#222222</item>
    </style>

